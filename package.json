{
  "name": "perp-lushan",
  "version": "1.0.0",
  "description": "",
  "main": "hardhat.config.js",
  "scripts": {
    "clean": "rm -rf typechain && rm -rf artifacts && rm -rf cache",
    "typechain": "npm run typechain-uniswap",
    "typechain-uniswap": "typechain --target ethers-v5 --out-dir ./typechain/uniswap ./node_modules/@uniswap/v3-core/artifacts/contracts/**/*.json",
    "test": "hardhat test",
    "build": "npm run typechain && hardhat compile",
    "postinstall": "husky install",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint-staged": "lint-staged"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@chainlink/contracts": "0.1.7",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "3.4.0",
    "@typechain/ethers-v5": "7.0.0",
    "@typechain/hardhat": "2.0.1",
    "@types/chai": "4.2.18",
    "@types/mocha": "8.2.2",
    "@types/node": "15.6.1",
    "@uniswap/v3-core": "1.0.0",
    "@uniswap/v3-periphery": "1.0.1",
    "bignumber.js": "9.0.1",
    "chai": "4.3.4",
    "eslint-config-prettier": "8.3.0",
    "ethereum-waffle": "3.3.0",
    "ethers": "5.2.0",
    "hardhat": "2.3.0",
    "hardhat-deploy": "0.7.10",
    "hardhat-deploy-ethers": "0.3.0-beta.8",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.0",
    "prettier-plugin-solidity": "1.0.0-beta.11",
    "solc": "0.7.6",
    "solhint": "3.3.6",
    "solidity-coverage": "0.7.16",
    "ts-generator": "0.1.1",
    "ts-node": "10.0.0",
    "typechain": "5.0.0",
    "typescript": "4.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write",
      "solhint"
    ]
  }
}
